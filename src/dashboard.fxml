<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="DashboardController">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Student Management" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TableView fx:id="studentTable" prefHeight="300" prefWidth="550">
        <columns>
            <TableColumn fx:id="nameCol" text="Name" prefWidth="130"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="130"/>
            <TableColumn fx:id="courseCol" text="Course" prefWidth="130"/>
            <TableColumn fx:id="dateTimeCol" text="Date &amp; Time" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="nameField" promptText="Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <TextField fx:id="courseField" promptText="Course" />
        <Button text="Add Student" onAction="#handleAddStudent" />
    </HBox>
</VBox>
